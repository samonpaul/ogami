<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Ogami | Shop</title>

    <!-- bootstrap -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <!-- Flickity -->
    <link rel="stylesheet" href="https://unpkg.com/flickity@2/dist/flickity.min.css">

    <!-- Font -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;500;700&display=swap" rel="stylesheet">

    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g=="
        crossorigin="anonymous" referrerpolicy="no-referrer" />

    <!-- Css -->
    <link rel="stylesheet" href="./style.css">
    <link rel="stylesheet" href="./shop.css">

    <!-- script -->
    <script src="https://checkout.stripe.com/checkout.js" defer></script>
    <script>
        var stripePublicKey = '<%= stripePublicKey %>'
    </script>
        <script src="script.js" defer></script>
</head>

<body>
    <!-- Header -->
    <header id="header">
        <div class="header-content py-2">
            <!-- navbar -->
            <nav class="navbar navbar-expand-lg">
                <div class="container">
                    <a href="#" class="navbar-brand">Ogami</a>

                    <div class="navbar-collapse collapse" id="navbarCollapse">
                        <ul class="navbar-nav">
                            <li class="nav-item">
                                <a href="./index.html" class="nav-link mx-2">Home</a>
                            </li>
                            <li class="nav-item">
                                <a href="#" class="nav-link mx-2 active">Shop</a>
                            </li>

                            <li class="nav-item">
                                <a href="#footer" class="nav-link mx-2">Contact</a>
                            </li>
                        </ul>

                        <div class="cart-container">

                            <a href="#" class="cart mx-3" id="cartIcon">
                                <i class="fa-solid fa-cart-shopping menu-footer__icon"></i>
                                <span>Cart</span>
                            </a>
                            <a href="#" class="cart mx-3" id="favIcon">
                                <i class="fa-solid fa-star menu-footer__icon"></i>
                                <span>Favorite</span>
                            </a>
                        </div>
                    </div>
                </div>
            </nav>
        </div>
    </header>

    <!-- Cart Section -->
    <div id="cart" class="p-5 cart-hide">
        <div class="cart-section py-4">
            <h3 class="section-heading mb-4">CART ITEMS</h3>
            <hr class="hr-line mb-5">
            <a href="#" class="btn btn-danger cart-btn-close py-3 px-4">X</a>
            <div class="cart-item-list py-4 mb-5">

            </div>
            <hr class="hr-line mb-5">
            <div class="cart-amount d-flex justify-content-between mb-3">
                <h3>Total</h3>
                <p class="total-amount">$ 00.00</p>
            </div>
            <a class="btn btn-success cart-btn-checkout py-3">Checkout</a>
        </div>
    </div>

    <!-- fav Section -->
    <div id="favorite" class="p-5 cart-hide">
        <div class="cart-section py-4">
            <h3 class="section-heading mb-4">FAVORITE ITEMS</h3>
            <hr class="hr-line mb-5">
            <a href="#" class="btn btn-danger fav-btn-close py-3 px-4">X</a>
            <div class="fav-item-list py-4 mb-5">

            </div>
            <hr class="hr-line mb-5">
            <!-- <div class="cart-amount d-flex justify-content-between mb-3">
                <h3>Total</h3>
                <p class="total-amount">$ 00.00</p>
            </div> -->
            <!-- <a class="btn btn-success cart-btn-checkout py-3">Checkout</a> -->
        </div>
    </div>


    <!-- main -->
    <main id="main">

        <div class="row container m-auto py-5">
            <!-- left bar -->

            <!-- right bar -->
            <div class="col-9 rightBar px-4">
                <div class="container featured py-5">
                    <div class="d-flex flex-wrap justify-content-evenly align-items-center py-5 featured-items">
                        <% items.products.forEach(function(item){%> 
                            <div class="featured-item m-4" data-item-id="<%= item.id %>">
                                <div class="featured-img mb-4">
                                    <img src="./img/<%= item.img %>" alt="P-1">
                                </div>
                                <div class="featured-text d-flex justify-content-between align-items-center">
                                    <p class="product-name"><%= item.name %></p>
                                    <p class="product-price">$<%= item.price / 100 %></p>
                                </div>
                                <a class="addToCart py-4 text-center">
                                    Add To Cart
                                </a>
                                <a class="addToFav"><i class="fa-solid fa-3x fa-heart"></i></a>
                            </div>
                        <% }) %> 
                    </div>
                </div>

            </div>
        </div>
    </main>

    <!-- Footer -->
    <footer id="footer">
        <div class="footer row container m-auto">
            <div class="col p-4 d-flex flex-column justify-content-start align-items-start">
                <a href="#" class="navbar-brand mb-4 text-white">Ogami</a>
                <p class="footer-para">Lorem, ipsum dolor sit amet consectetur adipisicing elit. Dolore necessitatibus
                    libero ipsum veniam aspernatur tempore error velit cum.</p>
                <div class="d-flex justify-content-evenly align-items-center py-4">
                    <a href="#" class="social-icon"><i class="fa-brands fa-instagram fa-3x me-4"></i></a>
                    <a href="#" class="social-icon"><i class="fa-brands fa-facebook-square fa-3x mx-4"></i></a>
                    <a href="#" class="social-icon"><i class="fa-brands fa-twitter-square fa-3x mx-4"></i></a>
                </div>
            </div>

            <div class="col p-4 d-flex flex-column justify-content-center align-items-center text-center">
                <h3 class="footer-heading">Shooping</h3>
                <ul class="footer-list">
                    <li class="list-item mb-4"><a href="#">Clothing Store</a></li>
                    <li class="list-item mb-4"><a href="#">Show Store</a></li>
                    <li class="list-item mb-4"><a href="#">Buy Accessories</a></li>
                    <li class="list-item mb-4"><a href="#">Sale</a></li>
                </ul>
            </div>

            <div class="col p-4 d-flex flex-column justify-content-start align-items-start text-center">
                <h3 class="footer-heading">Contact</h3>
                <p class="address text-align-left">101 street, Park Avenue <br> New York, 100001</p>
                <p class="email details">Random@example.com</p>
                <p class="phone details">+1 (101) 223344</p>
            </div>
        </div>
    </footer>


    <!-- BOOTSTRAP -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous">
        </script>

    <!-- Flickity
    <script src="https://unpkg.com/flickity@2/dist/flickity.pkgd.min.js"></script>
    <script src="./flickity.js"></script> -->

    <!-- JS -->

</body>

</html>